# App
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=Cipher Sleuth
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Upload and analysis limits
MAX_UPLOAD_MB=5
NEXT_PUBLIC_MAX_UPLOAD_MB=5
ANALYZE_TIMEOUT_MS=45000
GUEST_FREE_ANALYSIS_LIMIT=1

# OpenAI (LLM Orchestrator)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_BASE_URL=https://api.openai.com/v1

# Supabase (Database / Logging / Storage)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
SUPABASE_STORAGE_BUCKET=evidence-assets

# Feature toggles
ENABLE_LLM_ORCHESTRATOR=false
ENABLE_DUPLICATE_DETECTION=true
